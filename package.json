{
    "name": "funclist",
    "displayName": "Show Functions",
    "description": "List functions, symbols, bookmarks by configurable regular expressions",
    "version": "7.6.3",
    "publisher": "qrti",
    "author": {
        "name": "qrti"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/qrti/funclist"
    },
    "homepage": "https://github.com/qrti/funclist/blob/master/README.md",
    "bugs": {
        "url": "https://github.com/qrti/funclist/issues"
    },
    "engines": {
        "vscode": "^1.14.0"
    },
    "categories": [
        "Other"
    ],
    "icon": "images/logo.png",
    "activationEvents": [
        "onCommand:editor.printFunctions"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "editor.printFunctions",
                "title": "Show Functions"
            },
            {
                "command": "contextmenu.switchSort",
                "title": "Switch Sort"
            },
            {
                "command": "contextmenu.refresh",
                "title": "Refresh"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "command": "contextmenu.switchSort",
                    "group": "myGroup@1",
                    "titel": "Switch Sort",
                    "when": "resourceScheme == functions"
                },
                {
                    "command": "contextmenu.refresh",
                    "group": "myGroup@2",
                    "titel": "Refresh",
                    "when": "resourceScheme == functions"
                }
            ]
        },
        "configuration": {
            "type": "object",
            "title": "funcList configuration",
            "properties": {
                "funcList": {
                    "type": "object",
                    "properties": {
                        "doubleSpacing": {
                            "type": "boolean",
                            "description": "false=off, true=on"
                        },
                        "filters": {
                            "type": "array",
                            "description": "function filters",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "extensions": {
                                        "type": "array",
                                        "description": "file extensions",
                                        "items": {
                                            "type": "string"
                                        }
                                    },
                                    "native": {
                                        "type": "string",
                                        "description": "regEx to build native match list"
                                    },
                                    "display": {
                                        "type": "string",
                                        "description": "regEx to trim native matches for display"
                                    },
                                    "sort": {
                                        "type": "number",
                                        "description": "0 - unsorted order of appearance\n1 - sorted ignore case\n2 - sorted obey case"
                                    }
                                }
                            }
                        }
                    },
                    "default": {
                        "doubleSpacing": false,
                        "filters": [
                            {
                                "extensions": [
                                    ".c",
                                    ".h"
                                ],
                                "native": "/^[a-z]+\\s+\\w+\\(/mgi",
                                "display": "/\\S* +(\\w+)/1",
                                "sort": 0
                            },
                            {
                                "extensions": [
                                    ".cpp",
                                    ".hpp"
                                ],
                                "native": "/(?:^\\w+\\s+|^)\\w+[:]*\\w+\\(/mgi",
                                "display": "/[\\S ]+(\\w+)/",
                                "sort": 0
                            },
                            {
                                "extensions": [
                                    ".ts",
                                    ".php"
                                ],
                                "native": "/(?:^|\\s)function\\s+\\w+\\(/mg",
                                "display": "/\\s*function\\s+(\\w+)/1",
                                "sort": 0
                            },
                            {
                                "extensions": [
                                    ".asm"
                                ],
                                "native": "/^\\w+:\\s*$/mg",
                                "display": "/\\w+/",
                                "sort": 0
                            },
                            {
                                "extensions": [
                                    ".ps1"
                                ],
                                "native": "/function\\s+\\w+-?\\w*\\s*{/img",
                                "display": "/function\\s+(\\w+-?\\w*)/1i",
                                "sort": 0
                            },
                            {
                                "extensions": [
                                    ".cs",
                                    ".gui",
                                    ".mis"
                                ],
                                "native": "/(?:^\\s*)(function)\\s*(?:([a-zA-Z0-9_]+)::)?([a-zA-Z0-9_]+)\\s*\\(/mg",
                                "display": "/function\\s+(\\w+-?\\w*)/1i",
                                "sort": 0
                            }
                        ]
                    }
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "devDependencies": {
        "@types/node": "^6.0.88",
        "tslint": "^3.8.1",
        "typescript": "^2.1.4",
        "vscode": "^1.0.0"
    }
}
